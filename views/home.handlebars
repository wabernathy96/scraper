<body class="deep-purple lighten-5">
  <div class="container">
    <div class="row">
      <div id="featuredArticles">
        {{#each Article}}
          <div class="col s12 m6 l6">
            <div class="card" id={{this._id}}>
              <div class="card-image">
                <img src={{this.img}} class="activator" />
              </div>
              
              <div class="card-content">
                <span class="card-title activator">{{this.title}} <i class="material-icons right">more_vert</i></span>
              </div>

              <div class="card-reveal">
                <span class="card-title center">{{this.title}}</span>
                <p>{{this.summary}}</p>
                <br />
                <ul class="center">
                  <li>
                    <a class="waves-effect waves-light btn-small deep-purple lighten-3" href="{{this.link}}" target="_blank"><i class="material-icons left">launch</i>Go To Article</a>
                  </li>
                  <br />
                  <li>
                    <form class="saveForm" action="/save/{{this._id}}" method="POST" >
                      <button for="saveForm" type="submit" value="{{this.status}}" class="waves-effect waves-light btn-small deep-purple lighten-3"><i class="material-icons left">create_new_folder</i>{{this.status}}</button>
                    </form>
                  </li>
                  <br />
                  <li>
                    {{#unless this.note}}
                      <a href="#modal{{this._id}}" data-id="{{this._id}}" id="addNoteButton" class="waves-effect waves-light btn-small deep-purple lighten-3 modal-trigger">
                        <i class="material-icons left">add_comment</i>
                        Add Note
                      </a>
                    {{/unless}}
                    {{#if this.note}}
                      <a href='#modal{{this._id}}' data-id="{{this._id}}" id="editNoteButton" class="waves-effect waves-light btn-small deep-purple lighten-3 modal-trigger">
                        <i class="material-icons left">edit</i>
                        Edit Note
                      </a>
                    {{/if}}
                      
                    
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div id="modal{{this._id}}" class="modal">
            <div id="addNote" class="modal-content center">
              <h4>{{this.title}}</h4>
              <div class="row">
                <form id="addNoteForm" action="/article/{{this._id}}" method="POST" >
                  <div class="row">
                    <div class="input-field col m12">
                      <input type="text"  id="noteTitle">
                      <label id="noteTitleLabel" for="noteTitle">Title</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field m12">
                      <textarea id="noteBody" class="materialize-textarea" ></textarea>
                      <label id="noteBodyLabel" for="noteBody">Note Text</label>
                    </div>
                  </div>
                  <div class="row">
                    <button type="submit" data-id="{{this._id}}" id="saveNoteButton" for="addNoteForm" class="waves-effect waves-light btn-small deep-purple lighten-3 modal-close">
                      Submit
                    </button>
                  </div>
                </form>
                <div class="row">
                  <button type="button" id="closeModalButton" class="btn-flat modal-close btn-small deep-purple lighten-5 waves-effect">
                    Cancel
                  </button>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>



  
</body>
